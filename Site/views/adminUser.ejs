<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Perfil</h2>
            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/users/userslist">Usuarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= user.first_name  %> <%= user.last_name  %>  </li>
                </ol>
            </nav>
        </div>
    </section>
    <div class="container padding-y">

        <div class="row mb-5">
            <aside class="col-md-3">
                <ul class="list-group">
                    <a class="profile list-group-item" href="/users/profile">Perfil</a>
                    <a class="profile list-group-item" href="/product/productlist">Productos</a>
                    <a class="profile list-group-item" href="/categories/categorieslist">Categorias</a>
                    <a class="profile list-group-item" href="/users/userslist">Usuarios</a>
                    <a class="profile list-group-item" href="#">Configuraciones</a>
                    <a class="profile list-group-item" href="#">Mis Ordenes</a>
                </ul>
                <br>
                <a class="btn btn-light btn-block" href="/users/logout">
                    <i class="fa fa-power-off"></i>
                    <span class="text">Salir</span>
                </a>
            </aside>
            <main class="col-md-9">
                <article class="card">
                    <header class="card-header">
                        <h4 class="d-inline-block mr-3">Datos</h4>
                    </header>
                    <div class="card-body">
                        <div class="row">
                            <aside class="col-md-9">
                                <h5>Datos personales</h5>
                                <form>
                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Nombre</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Nombre"
                                                name="first_name" value="<%=user.first_name%>" disabled>
                                        </div>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Apellido"
                                                name="last_name" value="<%=user.last_name%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Telefono</label>
                                        <div class="col">
                                            <div class="input-group">
                                                <input name="phone" class="form-control" placeholder="Telefono"
                                                    type="text" name="phone" value="<%=user.phone%>" disabled>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Email</label>
                                        <div class="col-sm-9">
                                            <input type="email" class="form-control" placeholder="nombre@gmail.com"
                                                name="email" value="<%=user.email%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Categoria</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" placeholder="categoria" name="email"
                                                value="<%=user.category%>" disabled>
                                        </div>
                                    </div>

                            </aside>
                            <aside class="col-md-9">
                                <h5>Datos de envio</h5>
                                <form action="/users/register" method="POST">
                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Provincia</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Provincia" name="state"
                                                value="<%=user.state%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Localidad</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Localidad" name="city"
                                                value="<%=user.city%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Codigo Postal</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Codigo Postal"
                                                name="cp" value="<%=user.cp%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Calle</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Calle" name="street"
                                                value="<%=user.street%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Numero</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Numero"
                                                name="house_number" value="<%=user.house_number%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Dpto</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Dpto" name="apartment"
                                                value="<%=user.apartment%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Piso</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Piso" name="floor"
                                                value="<%=user.floor%>" disabled>
                                        </div>
                                    </div>
                            </aside>
                        </div>
                    </div>
        </div>
        <%- include('partials/footer') %>
</body>

</html>