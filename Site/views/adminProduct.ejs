<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Producto</h2>
            
            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/users/productlist ">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= producto.name %> </li>
                </ol>
            </nav>
             

        </div> <!-- container //  -->
    </section>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="/images/productImages/<%= producto.image %>"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="thumbs-wrap">
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">
                        <h2 class="title mb-4"> <%= producto.name %> </h2>
                        <hr>
                        <aside>
                            <dl class="row">
                                <dt class="col-sm-3">Descripcion:</dt>
                                <dd class="col-md-9"> <p><%= producto.description %></p></dd>

                                <dt class="col-sm-3">Garantia:</dt>
                                <dd class="col-sm-7"><%= producto.warranty %> meses </dd>

                                <dt class="col-sm-3">Categoria:</dt>
                                <dd class="col-sm-7"><%= producto.category  %> </dd>

                            </dl>
                        </aside>
                        <hr>

                        <div class="row mt-3 align-items-center">
                            <div class="col">
                                <span class="price h4">$<%= producto.price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1."); %></span> 
                            </div> <!-- col.// -->
                            <div class="col text-right">
                                <a href="/product/edit/<%= producto.id %>" class="btn  btn-primary">
                                    <span class="text">Editar</span>
                                </a>
                                <form action="/product/delete/<%= producto.id %>?_method=DELETE" class="inline" method="POST">
                                    <button class="btn btn-light " type="submit">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </form>
                                <a href="#" class="btn btn-light"> <i class="fa fa-folder"></i> </a>
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div>

        <section class="padding-y">
            <hr class="divider">
        </section>

      </output>
        <div class="row">
            <% destacados.forEach(producto => { %>
                <div class="col-lg-3 col-sm-4">
                    <div href="#" class="card card-product-grid">
                        <a href="/users/productlist/<%= producto.id %>" class="img-wrap"> <img src="/images/productImages/<%= producto.image %> "> </a>
                        <figcaption class="info-wrap">
                            <a href="/users/productlist/<%= producto.id %>" class="title"><%= producto.name %> </a>
                            <div class="col text-center">
                                <a href="/product/edit/<%= producto.id %>" class="btn  btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/product/delete/<%= producto.id %>?_method=DELETE" class="inline" method="POST">
                                    <button class="btn btn-light " type="submit">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </form>
                                <a href="#" class="btn btn-light"> <i class="fa fa-folder"></i> </a>
                            </div> <!-- col.// -->
                        </figcaption>
                    </div>
                </div> <!-- col.// -->
            <% }) %>
        </div> <!-- row.// -->
    
    </div>
    <%- include('partials/footer') %>
</body>

</html>