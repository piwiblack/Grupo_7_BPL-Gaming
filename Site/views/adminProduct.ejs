<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<script src="/js/alerts.js"></script>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Producto</h2>

            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/product/productlist ">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= product.name %> </li>
                </ol>
            </nav>


        </div> <!-- container //  -->
    </section>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="/images/productImages/<%= product.images %>"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="thumbs-wrap">
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images %>"></a>
                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">
                        <h2 class="title mb-4"> <%= product.name %> </h2>
                        <hr>
                        <aside>
                            <dl class="row">
                                <dt class="col-sm-3">Descripcion:</dt>
                                <dd class="col-md-9">
                                    <p><%= product.description %></p>
                                </dd>

                                <dt class="col-sm-3">Garantia:</dt>
                                <dd class="col-sm-7"><%= product.warranty %> meses </dd>

                                <dt class="col-sm-3">Categoria:</dt>
                                <dd class="col-sm-7"><%= product.categories.name  %> </dd>

                                <dt class="col-sm-3">Destacado:</dt>
                                <% if(product.status == "on"){%>
                                <dd class="col-sm-7">Si </dd>
                                <% }else{%>
                                <dd class="col-sm-7">No </dd>
                                <% } %>
                                <dt class="col-sm-3">Archivado:</dt>
                                <% if(product.archived == "on"){%>
                                <dd class="col-sm-7">Si </dd>
                                <% }else{%>
                                <dd class="col-sm-7">No </dd>
                                <% } %>



                            </dl>
                        </aside>
                        <hr>

                        <div class="row mt-3 align-items-center">
                            <div class="col">
                                <span
                                    class="price h4">$<%= product.price//.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");// %></span>
                            </div> <!-- col.// -->
                            <div class="col text-right">
                                <a href="/product/edit/<%= product.id %>" class="btn  btn-primary">
                                    <span class="text">Editar</span>
                                </a>
                                <form  action="/product/delete/<%= product.id %>?_method=DELETE" class="inline borrar"
                                    method="POST">
                                    <button class="btn btn-light"  type="submit">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </form>
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div>

        <section class="padding-y">
            <hr class="divider">
        </section>

        </output>
        <div class="row">
            <% productList.forEach(product => { %>
            <div class="col-lg-3 col-sm-4">
                <div href="#" class="card card-product-grid">
                    <a href="/product/productlist/<%= product.id %>" class="img-wrap"> <img
                            src="/images/productImages/<%= product.images %> "> </a>
                    <figcaption class="info-wrap">
                        <a href="/product/productlist/<%= product.id %>" class="title"><%= product.name %> </a>
                        <div class="col text-center">
                            <a href="/product/edit/<%= product.id %>" class="btn  btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form  action="/product/delete/<%= product.id %>?_method=DELETE" class="inline borrar"
                                method="POST">
                                <button  class="btn btn-light"  type="submit">
                                    <i class="fa fa-times"></i>
                                </button>
                            </form>
                        </div> <!-- col.// -->
                    </figcaption>
                </div>
            </div> <!-- col.// -->
            <% }) %>
        </div> <!-- row.// -->

    </div>
    <%- include('partials/footer') %>
</body>

</html>