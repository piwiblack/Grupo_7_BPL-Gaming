<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs') %>
<script src="/js/gridAndList.js"></script>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Usuarios</h2>

            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/users/profile">Mi cuenta</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
                </ol>
            </nav>

        </div> <!-- container //  -->
    </section>

    <section class="section-content padding-y">
        <div class="container">

            <div class="row">
                <aside class="col-md-3">
                    <ul class="list-group">
                        <form action="/users/userslist/search" class="pb-3" method="GET">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control" placeholder="Buscar" autocomplete="off">
                                <div class="input-group-append">
                                    <button class="btn btn-light" type="submit"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                        <a class="profile list-group-item" href="/users/profile">Perfil</a>
                        <a class="profile list-group-item" href="/product/productlist">Productos</a>
                        <a class="profile list-group-item" href="/categories/categorieslist">Categorias</a>
                        <a class="profile list-group-item" href="/users/userslist">Usuarios</a>
                    </ul>
                    <br>
                    <a class="btn btn-light btn-block" href="/users/logout">
                        <i class="fa fa-power-off"></i>
                        <span class="text">Salir</span>
                    </a>
                </aside>
                <main class="col-md-9">

                    <header class="border-bottom mb-4 pb-3">
                        <div class="form-inline">
                            <span class="mr-md-auto"><%= total %> usuarios</span>
                            <div class="btn-group">
                                <a id="filasBoton" href="#" class="btn btn-outline-secondary active"
                                    data-toggle="tooltip" title="" data-original-title="List view">
                                    <i class="fa fa-bars"></i></a>
                                <a id="gridBoton" href="#" class="btn  btn-outline-secondary" data-toggle="tooltip"
                                    title="" data-original-title="Grid view">
                                    <i class="fa fa-th"></i></a>
                            </div>
                        </div>
                    </header>

                    <div id="grid" class="row disnone">
                        <% users.forEach(user => { %>
                        <div class="col-md-4">
                            <figure class="card card-product-grid ">
                                <div class="img-wrap">
                                    <img src="/images/imagenproducto.jpg">
                                </div>
                                <figcaption class="info-wrap">
                                    <div class="info-main">
                                        <a href="/users/userslist/<%= user.id %>" class="h6 title">
                                            <%= user.first_name %> <%= user.last_name %> </a>
                                            <aside class="">
                                                <dl class="">
                                                      <dt class="">Email</dt>
                                                      <dd class=""><%= user.email %></dd>

                                                      <dt class="">Telefono</dt>
                                                      <dd class=""><%= user.phone %></dd>
                                                </dl>
                                            </aside>
                                    </div>
                                    <div class="info-aside">
                                        <br>
                                        <p>
                                            <a href="/users/userslist/<%= user.id %>" class="btn btn-primary btn-block">
                                                Detalles </a>
                                            <a href="/users/userslist/addadmin/<%= user.id %>"
                                                class="btn btn-light btn-block">
                                                <span class="text">Editar</span>
                                            </a>
                                        </p>
                                    </div>
                                </figcaption>
                            </figure>
                        </div>
                        <% }) %>
                    </div>


                    <div id="filas">
                        <% users.forEach(user => { %>
                        <article class="card card-product-list">
                            <div class="row no-gutters">
                                <aside class="col-md-3">
                                    <a href="/users/userslist/<%= user.id %>" class="img-wrap">
                                        <img src="/images/imagenproducto.jpg">
                                    </a>
                                </aside> <!-- col.// -->
                                <div class="col-md-6">
                                    <div class="info-main">
                                        <a href="/users/userslist/<%= user.id %>" class="h5 title mb-4">
                                            <%= user.first_name %> <%= user.last_name %></a>
                                            <aside class="">
                                                <dl class="">
                                                      <dt class="">Email</dt>
                                                      <dd class=""><%= user.email %></dd>

                                                      <dt class="">Telefono</dt>
                                                      <dd class=""><%= user.phone %></dd>
                                                </dl>
                                            </aside>
                                    </div> <!-- info-main.// -->
                                </div> <!-- col.// -->
                                <aside class="col-sm-3">
                                    <div class="info-aside">
                                        <br>
                                        <p>
                                            <a href="/users/userslist/<%= user.id %>" class="btn btn-primary btn-block">
                                                Detalles </a>
                                            <a href="/users/userslist/addadmin/<%= user.id %>"
                                                class="btn btn-light btn-block">
                                                <span class="text">Editar</span>
                                            </a>
                                        </p>
                                    </div> <!-- info-aside.// -->
                                </aside> <!-- col.// -->
                            </div> <!-- row.// -->
                        </article> <!-- card-product .// -->
                        <% }) %>
                    </div>


                    <nav aria-label="Page navigation sample">
                        <ul class="pagination">
                            <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
                        </ul>
                    </nav>

                </main> <!-- col.// -->
            </div>
        </div> <!-- container .//  -->
    </section>
    <%- include('partials/footer') %>
</body>

</html>