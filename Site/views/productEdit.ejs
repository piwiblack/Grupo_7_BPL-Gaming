<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="/js/product.js"></script>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Producto</h2>
            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/product/productlist ">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar Producto</li>
                </ol>
            </nav>
        </div>
    </section>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="/images/productImages/<%= product.images %>"></a></div>
                        </div>
                        <div class="thumbs-wrap">
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= product.images%>"></a>
                        </div>
                    </article>
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">
                        <form action="/product/edit/<%=product.id %>?_method=PUT" method="POST"
                            enctype="multipart/form-data">

                            <div class="form-group">
                                <input type="text" placeholder="Nombre" class="form-control" name="name"
                                    value="<%= product.name  %> ">
                            </div>

                            <div class="mb-3">
                                <div class="form-group">
                                    <input type="number" placeholder="Precio" class="form-control" name="price"
                                        value=<%= product.price%>>
                                </div>
                            </div>

                            <select id="inputState" class="form-control mb-3" name="category">
                                <% categories.forEach(category => { %>
                                <% if (category.id == product.id_category) { %>
                                <option value=" <%= category.id %>" selected>
                                    <%= category.name %>
                                </option>
                                <% }else{%>
                                <option value=" <%= category.id %>">
                                    <%= category.name %>
                                </option>
                                <%} %>
                                <% }) %>
                            </select>


                            <div class="form-group">
                                <textarea class="form-control" id="exampleFormControlTextarea1"
                                    placeholder="Descripcion" rows="3"
                                    name="description"><%= product.description  %></textarea>
                                <small class="form-text text-muted"> El carácter máximo es de 250 letras </small>
                            </div>


                            <div class="mb-3">
                                <div class="form-group">
                                    <input type="file" class="form-control" name="image" value="<%= product.image %>">
                                </div>
                            </div>

                            <div class="form">
                                <label>Garantia</label>
                                <div class="form-group flex-grow-0">
                                    <div class="input-group mb-3 input-spinner">
                                        <div class="input-group-prepend">
                                            <button class="btn btn-light" type="button" id="button-minus"> − </button>
                                        </div>
                                        <input type="text" class="form-control" name="warranty"
                                            value=<%= product.warranty %>>
                                        <div class="input-group-append">
                                            <button class="btn btn-light" type="button" id="button-plus"> + </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="custom-control custom-checkbox">
                                        <% if(product.status == "on"){%>
                                        <input type="checkbox" class="custom-control-input" name="status" checked>
                                        <%}else{%>
                                        <input type="checkbox" class="custom-control-input" name="status">
                                        <% } %>

                                        <div class="custom-control-label" for="customCheck1">Destacado</div>
                                    </label>
                                </div>
                            </div>
                            <hr>
                            <a href="/product/productlist">
                                <button class="btn btn-outline-primary" type="button"
                                    onclick="return ConfirmCancelEdit()">
                                    <span class="text">Cancelar</span>
                                </button>
                            </a>
                            <button class="btn btn-primary" type="submit" onclick="return ConfirmEdit()">
                                <span class="text">Aplicar</span>
                            </button>
                        </form>
                    </article>
                </main> 
            </div> 
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>