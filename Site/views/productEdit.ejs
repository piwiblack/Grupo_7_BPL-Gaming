<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <!-- <a href="#" class="btn  btn-outline-primary btn-plus"><i class="fas fa-plus"></i></a> -->
    <%- include('partials/header') %>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <form action="/product/edit/<%= selectedProduct.id %>?_method=PUT " enctype="multipart/form-data" method="POST">
                            <article class="gallery-wrap">
                                <div class="img-big-wrap">
                                    <div> <a href="#"><img src="/images/products/<%= selectedProduct.imagen %>"></a></div>
                                </div> <!-- slider-product.// -->
                                <div class="thumbs-wrap">
                                    <a href="" class="item-thumb"> <img src="/images/imagenproducto.jpg"></a>
                                    <a href="" class="item-thumb"> <img src="/images/imagenproducto.jpg"></a>
                                    <a href="" class="item-thumb"> <img src="/images/imagenproducto.jpg"></a>
                                    <input type="file" name="imagen" class="subir" >


                                </div> <!-- slider-nav.// -->
                            </article> <!-- gallery-wrap .end// -->
                    </aside>
                    <main class="col-md-6 border-left">
                        <article class="content-body">
                            <div class="form-group">
                                <div class="mb-3">
                                
                                <select name="categoria" id="inputState" class="select">
                                    <option value="<%= selectedProduct.categoria%>" selected><%= selectedProduct.categoria%></option>
                                    <% categories.forEach(category => { %>
                                        <% if (category != selectedProduct.category) { %>
                                            <option value=" <%= category %>"> <%= category %></option>
                                        <% } %>
                                    <% }) %>
                                    </select>
                            </div>
                                
                            
                                <input type="text"  class="form-control" name="marca" value="<%= selectedProduct.marca %> ">
                            </div>
                            <div class="form-group">
                                <input type="text"  class="form-control" name="modelo" value="<%= selectedProduct.modelo %> ">
                            </div>


                            <div class="mb-3">
                                <div class="form-group">
                                    <input type="number" class="form-control" name="precio" value="<%= selectedProduct.precio %>">
                                </div>
                            </div> <!-- price-detail-wrap .// -->

                            <div class="form-group">
                                <textarea name="descripcion" class="form-control" rows="3"><%= selectedProduct.descripcion %></textarea>
                                <small class="form-text text-muted"> El carácter máximo es de 250 caracteres </small>
                            </div>

                            <!-- <input class="btn  btn-outline-primary text"  type="submit" value="Guardar"> -->
                            <button id="public" class="btn  btn-outline-primary text" type="submit" name="id" value=" <%= selectedProduct.id %> ">Guardar</button>
                           
                        </form>


                        <form action="/product/delete/<%= selectedProduct.id %>?_method=DELETE " method="POST">
                            <button class="btn  btn-outline-primary text" type="submit">Borrar</button>
                        </form>
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div>
        <section class="padding-y">
            
        </section>

        
    </div>
    <%- include('partials/footer') %>
</body>

</html>