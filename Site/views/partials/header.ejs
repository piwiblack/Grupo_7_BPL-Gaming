                    <div class="text">
                      <span class="text-muted">Bienvenido!</span>
                      <div> 
                        <a href="/users/login">Ingresar</a> |  
                        <a href="/users/register"> Registrarse</a>
                      </div>
                    </div>
                  </div>
              <% } else{%>
                <div class="widget-header icontext">
                  <a href="/users/profile" class="icon icon-sm rounded-circle border"><i class="fa fa-user"></i></a>
                  <div class="text">
                    <span class="text-muted">Bienvenido!</span>
                    <div> 
                      <a href="/users/profile"><%= user.first_name + " " + user.last_name %> </a>
                    </div>
                  </div>
                </div>
  <% }%>




               

    
                



