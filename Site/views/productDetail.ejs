<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="/images/productImages/<%= producto.image %>"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="thumbs-wrap">
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.image %>"></a>
                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">

                        <h2 class="title mb-4"> <%= producto.name %> </h2>

                        <div class="mb-3">
                            <var
                                class="price h4">$<%= producto.price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1."); %></var>
                        </div> <!-- price-detail-wrap .// -->

                        <p><%= producto.description %>.</p>



                        <ul class="list-check mb-4">
                            <li>En stock</li>
                            <li>Garantia <%= producto.warranty %>  meses</li>
                            <li>Envios a toda la Argentina</li>
                        </ul>

                        <hr>
                        <div class="form-row">
                            <div class="form-group col-md flex-grow-0">
                                <label>Cantidad</label>
                                <div class="input-group mb-3 input-spinner">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-light" type="button" id="button-minus"> − </button>
                                    </div>
                                    <input type="text" class="form-control" value="1">
                                    <div class="input-group-append">
                                        <button class="btn btn-light" type="button" id="button-plus"> + </button>
                                    </div>
                                </div>
                            </div> <!-- col.// -->
                        </div>

                        <a href="#" class="btn  btn-primary"> Comprar </a>
                        <a href="#" class="btn  btn-outline-primary">
                            <span class="text">Añadir</span>
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
        </div>
    </div>
    <%- include('partials/footer') %>
</body>

</html>