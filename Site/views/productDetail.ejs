<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<script src="/js/quantityInput.js"></script>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Producto</h2>

            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <% categories.forEach(category => { %>
                    <% if (category.id == producto.id_category) { %>
                    <li class="breadcrumb-item"><a href="/categories/search/<%=category.id%>"> <%= category.name %> </a>
                        <%} %>
                        <% }) %>
                        </a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= producto.name %> </li>
                </ol>
            </nav>


        </div> <!-- container //  -->
    </section>
    <div class="container padding-y">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div> <a href="#"><img src="/images/productImages/<%= producto.images %>"></a></div>
                        </div> <!-- slider-product.// -->
                        <div class="thumbs-wrap">
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.images %>"></a>
                            <a href="" class="item-thumb"> <img src="/images/productImages/<%= producto.images %>"></a>
                        </div> <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">

                        <h2 class="title mb-4"> <%= producto.name %> </h2>

                        <div class="mb-3">
                            <var
                                class="price h4">$<%= producto.price/*.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1.");*/ %></var>
                        </div> <!-- price-detail-wrap .// -->

                        <p><%= producto.description %>.</p>



                        <ul class="list-check mb-4">
                            <li>En stock</li>
                            <li>Garantia <%= producto.warranty %> meses</li>
                            <li>Envios a toda la Argentina</li>
                        </ul>

                        <hr>
                        <form action="">
                            <div class="form-row">
                                <div class="form-group col-md flex-grow-0">
                                    <label>Cantidad</label>
                                    <div class="input-group mb-3 input-spinner">
                                        <div class="input-group-prepend">
                                            <button onclick="decrement()" class="btn btn-light" type="button"
                                                id="button-minus"> − </button>
                                        </div>
                                        <input id=demoInput type=number min=1 class="form-control" value="1"
                                            name="warranty">
                                        <div class="input-group-append">
                                            <button onclick="increment()" class="btn btn-light" type="button"
                                                id="button-plus"> + </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/users/login" class="btn  btn-primary"> Comprar </a>
                            <a href="/users/login" class="btn  btn-outline-primary">
                                <span class="text">Añadir</span>
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </form>
                    </article>
                </main>
            </div>
        </div>
        <% categories.forEach(category => { %>
        <% if(category.id == producto.id_category){%>
        <section class="section-name  padding-y-sm mt-5">
            <div class="row">

                <% for( let i = 0; i < productlist.length; i++ ) { %>
                    <% if(category.id == productlist[i].id_category){%>
                        <div class="col-lg-3 col-sm-4">
                            <div href="#" class="card card-product-grid">
                                <a href="/product/detail/<%= productlist[i].id %>" class="img-wrap"> <img
                                        src="/images/productImages/<%= productlist[i].images %> "> </a>
                                <figcaption class="info-wrap">
                                    <a href="/product/detail/<%= productlist[i].id %>" class="title"><%= productlist[i].name %> </a>
                                    <div class="price mt-1">$<%= productlist[i].price %> </div>
                                </figcaption>
                            </div>
                        </div>
                        <% }%>
                    <% } %>
            </div>
    </div>
    </section>

    <% }%>
    <% }) %>

    <%- include('partials/footer') %>
</body>

</html>