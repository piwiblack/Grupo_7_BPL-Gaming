<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body>
    <%- include('partials/header') %>
    <section class="section-pagetop bg">
        <div class="container">
            <h2 class="title-page">Usuario</h2>
            <nav>
                <ol class="breadcrumb text-white">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/users/userslist">Usuarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= user.first_name %> <%= user.last_name  %>  </li>
                </ol>
            </nav>
        </div>
    </section>
    <div class="container padding-y">

        <div class="row mb-5">
            <%- include('partials/menuPerfil') %>
            <main class="col-md-9">
                <article class="card">
                    <div class="card-body">
                        <div class="row">
                            <aside class="col-md-9">
                                <h5>Datos del usuario</h5>
                                <form action="/users/userslist/addadmin/<%=user.id%>?_method=PUT" method="POST">
                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Nombre</label>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Nombre"
                                                name="first_name" value="<%=user.first_name%>" disabled>
                                        </div>
                                        <div class="col">
                                            <input type="text" class="form-control" placeholder="Apellido"
                                                name="last_name" value="<%=user.last_name%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Email</label>
                                        <div class="col">
                                            <input type="email" class="form-control" placeholder="Email" name="email"
                                                value="<%=user.email%>" disabled>
                                        </div>
                                    </div>

                                    <div class="form-group form-row">
                                        <label class="col-md-3 col-form-label">Categoria</label>
                                        <div class="col">
                                            <select class="form-control mb-3" name="category">
                                                <% if (user.category == "admin") { %>
                                                <option value="admin" selected>Admin</option>
                                                <option value="user">Usuario</option>
                                                <% }else{%>
                                                <option value="user" selected>Usuario</option>
                                                <option value="admin"> Admin</option>
                                                <%} %>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form mb-2">
                                        <div class="offset-sm-3">
                                            <a href="/users/userslist">
                                                <button class="btn btn-outline-primary" type="button">
                                                    <span class="text">Cancelar</span>
                                                </button>
                                            </a>
                                            <button class="btn btn-primary" type="submit">
                                                <span class="text">Aplicar</span>
                                            </button>
                                        </div>
                                    </div>
                            </aside>
                        </div>
                    </div>
        </div>
        <%- include('partials/footer') %>
</body>

</html>